# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /                                           controllers.HomeController.index(file: String = "")
#GET        /web-api/token        controllers.HomeController.token
#GET        /web-api/config        controllers.HomeController.config
GET         /web-api/heartbeat                          controllers.HomeController.heartbeat
GET         /web-api/keycloak                           controllers.HomeController.keycloak

# BPM config
#+nocsrf
POST          /web-api/bpm/config/schemas                 axon.rest.bpm.config.SchemaController.find
GET           /web-api/bpm/config/schema/:id              axon.rest.bpm.config.SchemaController.findById(id: String)
POST          /web-api/bpm/config/schema                  axon.rest.bpm.config.SchemaController.create
PUT           /web-api/bpm/config/schema                  axon.rest.bpm.config.SchemaController.update
DELETE        /web-api/bpm/config/schema/:id              axon.rest.bpm.config.SchemaController.delete(id: String)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                               controllers.Assets.versioned(path="/public", file: Asset)

GET         /*file                                      controllers.HomeController.index(file: String)
